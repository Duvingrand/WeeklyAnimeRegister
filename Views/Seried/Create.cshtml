@model ProyectoPropio.Models.Serie

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Serie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Season" class="control-label"></label>
                <input asp-for="Season" class="form-control" />
                <span asp-validation-for="Season" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActualEpisode" class="control-label"></label>
                <input asp-for="ActualEpisode" class="form-control" />
                <span asp-validation-for="ActualEpisode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalOfEpisode" class="control-label"></label>
                <input asp-for="TotalOfEpisode" class="form-control" />
                <span asp-validation-for="TotalOfEpisode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NetflixURL" class="control-label"></label>
                <input asp-for="NetflixURL" class="form-control" />
                <span asp-validation-for="NetflixURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagePath" class="control-label"></label>
                <!-- Cambiar el input para subir archivos -->
                <input type="file" name="image" class="form-control" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" class="form-control">
                    <option value="Dropeado">Dropeado</option> <!-- Ejemplo de valor 1 -->
                    <option value="Completo">Completo</option> <!-- Ejemplo de valor 2 -->
                    <option value="Proximo">Proximo</option> <!-- Ejemplo de valor 3 -->
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DiaId" class="control-label"></label>
                <select asp-for="DiaId" class="form-control" asp-items="ViewBag.Dias"></select>
                <span asp-validation-for="DiaId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
