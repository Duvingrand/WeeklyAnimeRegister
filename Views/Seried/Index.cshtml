@model IEnumerable<ProyectoPropio.Models.Serie>

@{
  ViewData["Title"] = "Home Page";
}

<p class="position-fixed" style="top: 90%; left: 90%; transform: translateX(-50%);">
  <a asp-action="Create" class="btn btn-outline-info">Create New</a>
</p>

<div class="text-center d-flex justify-content-center">



  @* /°/°/°/°/°/°/°/°/°/°/°/°/°/°°/°/°/°/°/°/ *@
  <div id="carousel" class="carousel slide" style="width: 30rem;" data-bs-ride="carousel">
    <div class="carousel-inner">
      @foreach (var item in Model)
      {
        <div class="carousel-item @(Model.First() == item ? "active" : "")">

          <div class="card">
            <img class="card-img-top" src="@item.ImagePath" alt="@item.Name">
            <div class="card-body">
              <h5 class="card-title">@item.Name</h5>
            </div>
            @if (item.Dia != null)
            {
              <p>Day: @item.Dia.Name</p>
            }
            else
            {
              <p>No day assigned</p>
            }

            <ul class="list-group list-group-flush">
              <li class="list-group-item">Season: @item.Season</li>
              <li class="list-group-item">Episode: @item.ActualEpisode / @item.TotalOfEpisode</li>
              @if (item.Estado=="Actual"){<li class="list-group-item bg-info bg-opacity-25">Status: @item.Estado</li>}
              else if (item.Estado=="Proximo"){<li class="list-group-item bg-success bg-opacity-25">Status: @item.Estado</li>}
              else if (item.Estado=="Completo"){<li class="list-group-item bg-warning bg-opacity-25">Status: @item.Estado</li>}
              else {<li class="list-group-item bg-danger bg-opacity-25">Status: @item.Estado</li>}
              
            </ul>
            
            <div class="card-body">
              <p>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Details</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Edit</a>
              </p>
            </div>

          </div>

        </div>
      }
    </div>
    <button class="carousel-control-prev btn-outline-info" type="button" data-bs-target="#carousel"
      data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next btn-outline-info" type="button" data-bs-target="#carousel"
      data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  @* /°/°/°/°/°/°/°/°/°/°/°/°/°/°/°/°/°/°/°/ *@
</div>
